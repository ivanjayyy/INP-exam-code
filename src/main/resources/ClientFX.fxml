<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="725.0" prefWidth="529.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ijse.gdse73.chatroom.Client">
    <TextArea fx:id="chatArea" editable="false" layoutX="21.0" layoutY="85.0" prefHeight="559.0" prefWidth="490.0">
        <font>
          <Font name="System Italic" size="13.0"/>
        </font>
    </TextArea>
    <TextField fx:id="inputText" layoutX="21.0" layoutY="664.0" prefHeight="44.0" prefWidth="380.0">
        <font>
          <Font size="13.0"/>
        </font>
    </TextField>
    <Button fx:id="buttonSendText" layoutX="415.0" layoutY="664.0" mnemonicParsing="false" onAction="#sendTextOnAction"
            prefHeight="44.0" prefWidth="95.0" text="Send">
        <font>
          <Font size="20.0"/>
        </font>
    </Button>
    <Label fx:id="labelClientName" layoutX="21.0" layoutY="4.0" text="Client">
        <font>
          <Font size="30.0"/>
        </font>
    </Label>
    <Button fx:id="buttonConnection" layoutX="420.0" layoutY="14.0" mnemonicParsing="false"
            onAction="#connectToServerOnAction" prefHeight="14.0" prefWidth="86.0" text="Connect"/>
    <Button fx:id="buttonDisconnect" layoutX="420.0" layoutY="47.0" mnemonicParsing="false"
            onAction="#disconnectFromServerOnAction" prefHeight="14.0" prefWidth="86.0" text="Disconnect"/>
    <TextField fx:id="inputServerIP" layoutX="23.0" layoutY="47.0" promptText="Server IP"/>
</AnchorPane>
